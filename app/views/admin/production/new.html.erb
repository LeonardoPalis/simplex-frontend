<%= simple_form_for @work, :url => "/admin/production/employee_hour", :method => :post,html: { id:'form-employee', class: 'form-horizontal' }, wrapper: :horizontal_form,
wrapper_mappings: {
  check_boxes: :horizontal_radio_and_checkboxes,
  radio_buttons: :horizontal_radio_and_checkboxes,
  file: :horizontal_file_input,
  boolean: :horizontal_boolean } do |f| %>
  <%= f.error_notification %>
  <% if flash[:notice] %>
     <div class="alert alert-success" id="js_success" style="padding-bottom:10px"><%= flash[:notice] %></div>
  <% end %>
  <div class="alert alert-danger" id="js_error" style="padding-bottom:10px" hidden></div>
  <% if flash[:alert] %>
     <div class="alert alert-danger" style="padding-bottom:10px"><%= flash[:alert] %></div>
  <% end %>
  <div class="panel">
    <div class="panel-heading">
      <span class="panel-title">Nova produção</span>
    </div>
    <div class="panel-body">

      <div class="row">
        <div class="col-md-9">Produtos
          <%= select_tag "products", options_for_select(@products), id:"products", class: "form-control multiple-select",multiple: false, :require=>true%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-9">Funcionários alocados para produção
          <%= select_tag "employees", options_for_select(@employees), id:"employees", class: "form-control multiple-select",multiple: true, :require=>true%>
        </div>
      </div>

      
    </div>
    <div class="panel-footer text-right">
        <input type="submit" name="commit"  value="Salvar" id="save-user-btn" class="btn btn-primary" data-disable-with="Salvar">      </div>
    </div>

<% end %>
